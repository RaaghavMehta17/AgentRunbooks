POSTGRES_USER=ops
POSTGRES_PASSWORD=ops
POSTGRES_DB=opsdb
APP_ENV=dev

# Observability
OTEL_SERVICE_NAME=gateway
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# GitHub adapter
GITHUB_TOKEN=ghp_example
GITHUB_DEFAULT_REPO=org/service

# Temporal
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=default

# Agent Brain (LLM)
LLM_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COST_MODEL=openai_gpt-4o
TOKEN_PRICE_INPUT_USD=0.000005
TOKEN_PRICE_OUTPUT_USD=0.000015

# Security
AUDIT_HMAC_SECRET=dev_audit_secret
APPROVAL_SIG_TTL_MIN=30
RATE_LIMIT_DEFAULT_RPS=5
RATE_LIMIT_BURST=20

# Kubernetes
K8S_MODE=local
K8S_KUBECONFIG=/root/.kube/config
K8S_NAMESPACE_ALLOWLIST=["default","staging"]
K8S_ENV_LABEL_KEY=cluster.env
K8S_ENV_ALLOWED=["dev","staging"]
K8S_RBAC_MAP={"SRE":"default","Admin":"default"}

# OIDC
OIDC_ENABLED=true
OIDC_ISSUER=https://your-idp.com/{tenant}/v2
OIDC_CLIENT_ID=xxx
OIDC_CLIENT_SECRET=yyy
OIDC_REDIRECT_URI=http://localhost:8000/auth/oidc/callback
OIDC_SCOPES=openid profile email groups
OIDC_GROUPS_CLAIM=groups
OIDC_ROLE_MAP={"SRE":["sre","oncall"],"Admin":["admins"],"OnCall":["oncall"],"Viewer":["viewers"]}

# Sessions
SESSION_SECRET=dev_session_secret
SESSION_COOKIE_NAME=ops_agents_session
SESSION_TTL_MIN=60

# Dev mode
OIDC_DEV_MODE=true   # enables /auth/oidc/dev-login for local testing

# SCIM v2 Provisioning
SCIM_ENABLED=true
SCIM_BEARER_TOKEN=supersecret   # used for SCIM auth: "Authorization: Bearer ..."
SCIM_ROLE_MAP={"Admin":["admins"],"SRE":["sre"],"OnCall":["oncall"],"Viewer":["viewers"]}
